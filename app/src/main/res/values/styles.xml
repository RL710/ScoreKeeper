<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextTeamStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_span">2</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="buttonPlusStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/buttonPlus</item>
    </style>

    <style name="textViewCount">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:text">@string/valueKeeperIndex</item>
    </style>

    <style name="textViewRowName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_columnSpan">1</item>
    </style>

    <!--Headline Style-->
    <style name="Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--ApplyButtons Reset and Save-->
    <style name="applyButton">
        <item name="android:layout_column">1</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_span">3</item>

    </style>

    <!--Saved Matches Colum Headlines -->
<style name="teamColumHeadline">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">6</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">24sp</item>
    <item name="android:layout_columnSpan">1</item>
    <item name="android:gravity">center</item>
</style>
    <style name="valuesColumHeadline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:gravity">center</item>
    </style>

</resources>

